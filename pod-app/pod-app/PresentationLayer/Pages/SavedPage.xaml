<Page x:Class="pod_app.PresentationLayer.Pages.SavedPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:views="clr-namespace:pod_app.PresentationLayer.Views">





    <Page.Resources>


        <DropShadowEffect x:Key="ShadowEffect"
                      Color="#0f0f0f"
                      BlurRadius="15"
                      ShadowDepth="0"
                      Opacity="1" />

        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Background" Value="#1f1f1f"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect" Value="{StaticResource ShadowEffect}"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="20"
                            Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <Grid Background="#0F0F10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TOP BAR -->
        <Grid Grid.Row="0" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="Tillbaka"
                    Width="110" 
                    Height="36"
                    Click="BtnBack_Click"
                    Style="{StaticResource RoundedButton}"/>


            <TextBlock Grid.Column="1"
                    Text="Sparade poddar"
                    Foreground="White"
                    FontSize="20"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>

            <Button Grid.Column="2"
                    Content="Filtrera"
                    Width="110"
                    Height="36"
                    Click="FilterButton_Click"

                    Style="{StaticResource RoundedButton}"> 


                <Button.ContextMenu>
                    <ContextMenu x:Name="filterMenu"/>
                </Button.ContextMenu>

            </Button>



        </Grid>

        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Row="1" 
                      Margin="40" 
                      VerticalScrollBarVisibility="Auto">

            <StackPanel>

                <ItemsControl x:Name="PodListControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>

                            <StackPanel Margin="0 15"
                                        DataContext="{Binding}">


                                <!-- PODCAST TILE (KLICKBAR) -->
                                <views:EpisodeView  MouseLeftButtonUp="OnFeedClicked"/>


                                <!-- EXPANDED EPISODES -->
                                <StackPanel>
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>

                                    <!-- EPISODES IN SAME DESIGN -->
                                    <ItemsControl ItemsSource="{Binding Path=DataContext.EpisodesList,
                                                        RelativeSource={RelativeSource AncestorType=Page}}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <views:EpisodeView/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- LOAD MORE -->
                                    <Button Margin="0,10,0,0"
                                            Content="Visa fler"
                                            Click="LoadMore_Click"
                                            HorizontalAlignment="Center"
                                            Style="{StaticResource RoundedButton}"
                                            Width="140"/>


                                    <!--  EDIT KNAPP -->
                                    <Button Content="Byt namn"
                                            Width="90"
                                            Height="32"
                                            Style="{StaticResource RoundedButton}"
                                            DataContext="{Binding}"
                                            Click="OnRenamePodcast_Click"/>

                                    <Button Content="Kategori"
                                            Width="90"
                                            Height="32"
                                            Style="{StaticResource RoundedButton}"
                                            DataContext="{Binding}"
                                            Click="OnEditCategory_Click"/>

                                    <Button Content="Ta bort"
                                            Width="90"
                                            Height="32"
                                            Style="{StaticResource RoundedButton}"
                                            Click="OnDeletePodcast_Click"/>





                                </StackPanel>

                            </StackPanel>

                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>

