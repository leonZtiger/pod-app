<Page x:Class="pod_app.PresentationLayer.Pages.SavedPage" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pod_app.PresentationLayer.Pages"
      xmlns:views="clr-namespace:pod_app.PresentationLayer.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SavedPage">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Grid Grid.Row="0" Margin="20,20,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>


            <Button Name="BtnBack"
                    Grid.Column="0"
                    Content="Tillbaka"
                    Width="110"
                    Height="36"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="BtnBack_Click">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="#F5F5F5"
                                BorderBrush="#C5C5C5"
                                BorderThickness="1.5"
                                CornerRadius="14"
                                Padding="10"
                                SnapsToDevicePixels="True">

                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#E6E6E6"/>
                            </Trigger>


                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#DADADA"/>
                                <Setter TargetName="border"
                                        Property="BorderBrush"
                                        Value="#B0B0B0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>


            <Button Name="BtnFilter"
                    Grid.Column="2"
                    Content="Filtrera"
                    Width="110"
                    Height="36"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Click="BtnFilter_Click">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="#F5F5F5"
                                BorderBrush="#C5C5C5"
                                BorderThickness="1.5"
                                CornerRadius="14"
                                Padding="10"
                                SnapsToDevicePixels="True">

                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#E6E6E6"/>
                            </Trigger>


                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#DADADA"/>
                                <Setter TargetName="border"
                                        Property="BorderBrush"
                                        Value="#B0B0B0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>

                <Button.ContextMenu>
                    <ContextMenu x:Name="filterMenu">
                        <MenuItem Header="Alla" Click="FilterItem_Click"/>
                        <MenuItem Header="Nyheter" Click="FilterItem_Click"/>
                        <MenuItem Header="Sport" Click="FilterItem_Click"/>
                        <MenuItem Header="Humor" Click="FilterItem_Click"/>
                        <MenuItem Header="Dokumentär" Click="FilterItem_Click"/>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
        </Grid>


        <views:PodView x:Name="podViewControl"
                       Margin="150,30,150,60" Grid.RowSpan="2"/>
    </Grid>
</Page>
