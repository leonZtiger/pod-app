<Window x:Class="pod_app.PresentationLayer.Views.PodcastDetailsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Spara podd"
        Height="300"
        Width="450"
        Background="#1F1F21"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Foreground="White"
                   FontSize="16"
                   FontWeight="UltraLight"
                   TextAlignment="Center"
                   Margin="0 0 0 20"
                   Text="Ange namn och kategori för podden." />

        <!-- Content -->
        <StackPanel Grid.Row="1"
                    Orientation="Vertical"
                    HorizontalAlignment="Center">

            <!-- Name -->
            <TextBlock Foreground="White"
                       FontSize="12"
                       Margin="0,0,0,2"
                       Text="Namn i appen:" />

            <TextBox x:Name="TitleTextBox"
                     Background="#cccccc"
                     Height="30"
                     Width="220"
                     VerticalContentAlignment="Center"
                     Margin="0,0,0,10">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="15" />
                        <Setter Property="Padding" Value="10 0" />
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <!-- Category -->
            <TextBlock Foreground="White"
                       FontSize="12"
                       Margin="0,0,0,2"
                       Text="Kategori:" />

            <TextBox x:Name="CategoryTextBox"
                     Background="#cccccc"
                     Height="30"
                     Width="220"
                     VerticalContentAlignment="Center"
                     Margin="0,0,0,5">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="15" />
                        <Setter Property="Padding" Value="10 0" />
                    </Style>
                </TextBox.Resources>
            </TextBox>


            <!-- Buttons -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0">

                <!-- Save-button -->
                <Button Foreground="white"
                        Margin="0,0,10,0"
                        Height="30"
                        Width="90"
                        BorderBrush="Gray"
                        Content="Spara"
                        Background="#0c0c0c"
                        Click="Save_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                            <Setter Property="Padding" Value="10 0" />
                        </Style>
                    </Button.Resources>
                </Button>

                <!-- Cancel button -->
                <Button Foreground="white"
                        Height="30"
                        Width="90"
                        BorderBrush="Gray"
                        Content="Avbryt"
                        Background="#2f2f2f"
                        Click="Cancel_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15" />
                            <Setter Property="Padding" Value="10 0" />
                        </Style>
                    </Button.Resources>
                </Button>

            </StackPanel>

        </StackPanel>

       


    </Grid>
</Window>

