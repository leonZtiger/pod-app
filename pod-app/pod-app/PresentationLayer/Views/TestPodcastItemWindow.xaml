<Window x:Class="pod_app.PresentationLayer.Views.TestPodcastItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pod_app.PresentationLayer.Views"
        xmlns:models="clr-namespace:pod_app.Models"

        mc:Ignorable="d"
        Title="TestPodcastItemWindow" Height="450" Width="800">

    <Window.Resources>
        <models:PodModel x:Key="SamplePod"
                         Title="Test Episode 1 – How Dogs Are Best"
                         Description="A long test description to see how wrapping works and how it looks in the UI."
                         ImageUrl="https://hips.hearstapps.com/clv.h-cdn.co/assets/16/18/gettyimages-586890581.jpg?crop=0.668xw:1.00xh;0.219xw,0"
                         ReleaseDate="2025-06-01"
                         IsSaved="True"
                         Duration="2hrs 23min" />
    </Window.Resources>

    <Grid DataContext="{StaticResource SamplePod}">
        <local:PodView/>
    </Grid>
</Window>
