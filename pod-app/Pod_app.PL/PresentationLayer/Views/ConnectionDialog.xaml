<Window x:Class="pod_app.PresentationLayer.Views.ConnectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pod_app.PresentationLayer.Views"
        mc:Ignorable="d"
        Title="Koppla till databasen"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Height="230"
        Width="450"
        Background="#1F1F21">
    <Grid Width="auto"
          Height="150"
          Margin="20 10">
        <Grid.RowDefinitions>
            <!-- Dialog text -->
            <RowDefinition />
            <!-- Input and button -->
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Foreground="White"
                   FontSize="14"
                   FontWeight="UltraLight"
                   TextAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Row="0"
                   TextWrapping="Wrap">
            Vänligen ange din kopplings-sträng till MongoDB.
        </TextBlock>

        <StackPanel  Grid.Row="1"
                     Orientation="Horizontal"
                     HorizontalAlignment="Center">

            <StackPanel VerticalAlignment="Bottom">

                <TextBlock Foreground="Red"
                           FontSize="12"
                           FontWeight="Bold"
                           Text="{Binding ErrorMsg.Value}" />

                <TextBox Background="#cccccc"
                         Height="30"
                         VerticalContentAlignment="Center"
                         Width="200"
                         Text="{Binding Input, Mode=TwoWay}">

                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius"
                                    Value="15" />
                            <Setter Property="Padding"
                                    Value="10 0" />
                        </Style>
                    </TextBox.Resources>

                </TextBox>
            </StackPanel>


            <Button Foreground="white"
                    Margin="10 0 0 0"
                    Height="30"
                    BorderBrush="Gray"
                    Content="Koppla"
                    Background="#0c0c0c"
                    Click="Connect_Click"
                    VerticalAlignment="Bottom">

                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius"
                                Value="15" />
                        <Setter Property="Padding"
                                Value="10 0" />
                    </Style>
                </Button.Resources>
            </Button>

            <Button Foreground="white"
                    Margin="10 0 0 0"
                    Height="30"
                    BorderBrush="Gray"
                    Content="Fortsätt Utan"
                    Background="#2f2f2f"
                    Click="Continue_Click"
                    VerticalAlignment="Bottom">

                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius"
                                Value="15" />
                        <Setter Property="Padding"
                                Value="10 0" />
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>
