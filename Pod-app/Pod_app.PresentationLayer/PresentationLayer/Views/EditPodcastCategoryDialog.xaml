<Window x:Class="pod_app.PresentationLayer.Views.EditPodcastCategoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Byt kategori"
        Height="240"
        Width="430"
        Background="#1F1F21"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TITLE -->
        <TextBlock Grid.Row="0"
                   Foreground="White"
                   FontSize="16"
                   FontWeight="UltraLight"
                   TextAlignment="Center"
                   Margin="0 0 0 15"
                   Text="Välj ny kategori för podden." />

        <!-- MAIN CONTENT -->
        <StackPanel Grid.Row="1"
                    Orientation="Vertical"
                    HorizontalAlignment="Center">

            <TextBlock Foreground="White"
                       FontSize="12"
                       Margin="0,0,0,2"
                       Text="Välj kategori att tilldela podden:" />

            <ComboBox x:Name="CategoryComboBox"
                      Width="260"
                      Height="30"
                      Margin="0,0,0,10"
                      Background="#2f2f2f"
                      Foreground="Black"
                      BorderBrush="Gray"
                      BorderThickness="1" />
        </StackPanel>

        <!-- BUTTONS -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">

            <Button Foreground="white"
                    Margin="0,0,10,0"
                    Height="30"
                    Width="90"
                    BorderBrush="Gray"
                    Content="Avbryt"
                    Background="#2f2f2f"
                    Click="Cancel_Click">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="15" />
                        <Setter Property="Padding" Value="10 0" />
                    </Style>
                </Button.Resources>
            </Button>

            <Button Foreground="white"
                    Height="30"
                    Width="90"
                    BorderBrush="Gray"
                    Content="Spara"
                    Background="#0c0c0c"
                    Click="Save_Click">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="15" />
                        <Setter Property="Padding" Value="10 0" />
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>
