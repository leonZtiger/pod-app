<UserControl x:Class="pod_app.PresentationLayer.Views.PodView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:pod_app.PresentationLayer.Views"
             mc:Ignorable="d"
             Width="486"
             Margin="10"
             Cursor="Hand"
             SnapsToDevicePixels="True"
             >

    <UserControl.Effect>
        <DropShadowEffect Color="Black"
                          BlurRadius="15"
                          ShadowDepth="0"
                          Opacity="0.4" />
    </UserControl.Effect>

    <!-- Styling -->
    <UserControl.Resources>

        <!-- Buttons -->
        <Style x:Key="IconButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="BorderBrush"
                    Value="Transparent" />
            <Setter Property="Padding"
                    Value="0" />
            <Setter Property="Width"
                    Value="24" />
            <Setter Property="Height"
                    Value="24" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="HorizontalAlignment"
                    Value="Right" />

            <!-- Animate on click and hover -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Opacity"
                                        Value="0.5" />
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter Property="Opacity"
                                        Value="0.3" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Text -->
        <Style x:Key="TextStyle"
               TargetType="TextBlock">
            <Setter Property="TextWrapping"
                    Value="Wrap" />
            <Setter Property="TextTrimming"
                    Value="WordEllipsis" />
            <Setter Property="HorizontalAlignment"
                    Value="Left" />
        </Style>

    </UserControl.Resources>

    <UserControl.Triggers>
        <!-- Hover in -->
        <EventTrigger RoutedEvent="MouseEnter">
            <BeginStoryboard>
                <Storyboard>

                    <!-- Stronger shadow -->
                    <DoubleAnimation Storyboard.TargetProperty="(Effect).(DropShadowEffect.BlurRadius)"
                                     To="35"
                                     Duration="0:0:0.15" />
                    <DoubleAnimation Storyboard.TargetProperty="(Effect).(DropShadowEffect.Opacity)"
                                     To="0.8"
                                     Duration="0:0:0.15" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>

        <!-- Hover out -->
        <EventTrigger RoutedEvent="MouseLeave">
            <BeginStoryboard>
                <Storyboard>

                    <!-- Reset shadow -->
                    <DoubleAnimation Storyboard.TargetProperty="(Effect).(DropShadowEffect.BlurRadius)"
                                     To="15"
                                     Duration="0:0:0.15" />
                    <DoubleAnimation Storyboard.TargetProperty="(Effect).(DropShadowEffect.Opacity)"
                                     To="0.4"
                                     Duration="0:0:0.15" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>

    </UserControl.Triggers>
    
    <Border CornerRadius="22"
            Background="#1F1F23"
            BorderBrush="Gray"
            BorderThickness="0 0 0 0"
            Padding="10 10 14 10"
            Height="120">

  
        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Left picture column -->
                <ColumnDefinition Width="110" />
                <!-- Right info column -->
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- Main Image -->
            <Border HorizontalAlignment="Left"
                    Grid.Column="0"
                    Height="100"
                    Width="100"
                    CornerRadius="12">
                <Border.Background>
                    <ImageBrush ImageSource="{Binding PodModel.ImageUrl}"
                                RenderOptions.BitmapScalingMode="HighQuality"
                                d:ImageSource="https://hips.hearstapps.com/clv.h-cdn.co/assets/16/18/gettyimages-586890581.jpg?crop=0.668xw:1.00xh;0.219xw,0" />
                </Border.Background>
            </Border>



            <!-- Right info container -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <!-- Title and like button -->
                    <RowDefinition Height="1*" />
                    <!-- Description -->
                    <RowDefinition Height="2*" />
                    <!-- Metadata and linkss -->
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <!-- Title and like button container -->
                <Grid HorizontalAlignment="Stretch"
                      VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <!-- Title column -->
                        <ColumnDefinition Width="7*" />
                        <!-- Like column -->
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>

                    <!-- Title -->
                    <TextBlock d:Text="#321 MMA Fight Islam"
                               Foreground="White"
                               FontSize="15"
                               Grid.Column="0"
                               Style="{StaticResource TextStyle}"
                               Text="{Binding PodModel.Title}" />

                    <!-- Like button -->
                    <Button Grid.Column="1"
                            Click="OnLikeClicked">
                        <!-- Change image based on the state of IsSaved -->
                        <Button.Style>
                            <Style TargetType="Button"
                                   BasedOn="{StaticResource IconButtonStyle}">
                                <Style.Triggers>
                                    <!-- On saved -->
                                    <DataTrigger Binding="{Binding PodModel.IsSaved}"
                                                 Value="True">
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <Image RenderOptions.BitmapScalingMode="Fant"
                                                       Source="/PresentationLayer/Views/Assets/heart_fill.png" />
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>

                                    <!-- On not saved -->
                                    <DataTrigger Binding="{Binding PodModel.IsSaved}"
                                                 Value="False">
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <Image RenderOptions.BitmapScalingMode="Fant"
                                                       Source="/PresentationLayer/Views/Assets/heart_no_fill.png" />
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                </Grid>

                <!-- Description -->
                <TextBlock Foreground="DarkGray"
                           d:Text="In this episode Joe Rogan takes shrooms and trip while the MMA fighter Islam Makhachev talks about how to do a safe-guard."
                           Grid.Row="1"
                           Style="{StaticResource TextStyle}"
                           Text="{Binding PodModel.Description}" />

                <!-- Metadata and links -->
                <Grid Grid.Row="2"
                      VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <!-- Release date -->
                        <ColumnDefinition Width="2*" />
                        <!-- Duration -->
                        <ColumnDefinition Width="2*" />
                        <!-- Link -->
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <!-- Release date -->
                    <TextBlock d:Text="23 Juni 2024"
                               FontSize="12"
                               Style="{StaticResource TextStyle}"
                               Foreground="White"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Text="{Binding PodModel.ReleaseDate, StringFormat={}{0:d MMM yyyy}}" />
                    <!-- Duration -->
                    <TextBlock d:Text="2hrs 20min"
                               FontSize="12"
                               Style="{StaticResource TextStyle}"
                               Foreground="White"
                               Grid.Column="1"
                               VerticalAlignment="Center"
                               Text="{Binding PodModel.Duration}" />
                    <!-- Link -->
                    <Button Click="OnOpenLinkClicked"
                            Grid.Column="2"
                            Style="{StaticResource IconButtonStyle}">
                        <Image RenderOptions.BitmapScalingMode="Fant"
                               Source="/PresentationLayer/Views/Assets/share.png" />
                    </Button>
                </Grid>
            </Grid>
        </Grid>
    </Border>

</UserControl>
